<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peng.hwmallservicedemo.repository.user.AddressRepository">

    <!-- 结果映射：与数据库表 `address` 字段匹配 -->
    <resultMap id="AddressResultMap" type="com.peng.hwmallservicedemo.model.user.Address">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="tel" column="tel"/>
        <result property="address" column="address"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!-- 根据用户ID查询所有地址 -->
    <select id="findByUserId" parameterType="int" resultMap="AddressResultMap">
        SELECT id, user_id, name, tel, address, create_time
        FROM address
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <!-- 根据地址ID查询地址 -->
    <select id="findById" parameterType="int" resultMap="AddressResultMap">
        SELECT id, user_id, name, tel, address, create_time
        FROM address
        WHERE id = #{id}
    </select>

    <!-- 保存地址 -->
    <insert id="save" parameterType="com.peng.hwmallservicedemo.model.user.Address" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO address (user_id, name, tel, address)
        VALUES (#{userId, jdbcType=INTEGER}, #{name}, #{tel}, #{address})
    </insert>

    <!-- 更新地址 -->
    <update id="update" parameterType="com.peng.hwmallservicedemo.model.user.Address">
        UPDATE address
        SET name = #{name},
            tel = #{tel},
            address = #{address}
        WHERE id = #{id}
    </update>

    <!-- 删除地址 -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM address
        WHERE id = #{id}
    </delete>

</mapper>


